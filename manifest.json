{
  "manifest_version": 3,
  "name": "Network Monitor Extension",
  "version": "1.0.0",
  "description": "A Chrome extension for monitoring and controlling network activity.",
  "permissions": [
    "tabs",
    "webRequest",
    "webRequestBlocking",
    "storage",
    "activeTab"
  ],
  "background": {
    "service_worker": "src/background/background.ts"
  },
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/contentScript.ts"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["src/panel/panel.html"],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "homepage_url": "https://example.com",
  "update_url": "https://example.com/update.json"
}